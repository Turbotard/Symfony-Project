{% extends 'base.html.twig' %}

{% block title %}Edit FriendGroup{% endblock %}

{% block body %}
    <h1>Edit FriendGroup</h1>

    {{ include('friend_group/_form.html.twig', {'button_label': 'Update'}) }}

    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/5.15.3/css/all.min.css">
    <link href="https://fonts.googleapis.com/css?family=Montserrat" rel="stylesheet">
    
    <style>
        .back-group {
            position: absolute;
            top: 0;
            left: 0;
            color: #007bb5;
            margin: 10px 10px;
            padding: 5px 10px;
            background-color: #e6f7ff;
            border: 1px solid #007bb5;
            border-radius: 5px;
            transition: background-color 0.3s, color 0.3s;

        }

        .back-group:hover {
            background-color: #007bb5;
            color: #ffffff;
        }

        .back-btn {
            font-family: 'Montserrat', sans-serif;
            text-decoration: none;
            color: #007bb5;
        }

        .back-btn:hover {
            color: #ffffff;
        }

    </style>

    <div class='back-group'>
        <i class="fas fa-arrow-left arrow"></i>
        <a href="{{ path('app_friend_group_index') }}" class='back-btn'>Back to list</a>
    </div>

    {{ include('friend_group/_delete_form.html.twig') }}
{% endblock %}
