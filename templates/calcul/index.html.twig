{% extends 'base.html.twig' %}

{% block title %}Balances{% endblock %}

{% block stylesheets %}
    {{ parent() }}
    <style>
        /* Form general styles */
        body {
            background-color: #e6f7ff;
            font-family: Arial, sans-serif;
        }

        /* Header style */
        h1 {
            text-align: center;
            color: #007bb5;
            padding: 20px 0;
        }

        /* Table styles */
        .table {
            width: 90%;
            margin: 20px auto;
            border-collapse: collapse;
        }

        .table thead {
            background-color: #007bb5;
            color: #ffffff;
        }

        .table thead th {
            padding: 10px;
            border-bottom: 2px solid #e6f7ff;
        }

        .table tbody tr:nth-child(odd) {
            background-color: #f0faff;
        }

        .table tbody tr:nth-child(even) {
            background-color: #c9e6ff;
        }

        .table td {
            padding: 10px;
            text-align: center;
        }

        /* Link styles (if there are links in the future) */
        a {
            color: #007bb5;
            text-decoration: none;
            margin: 0 10px;
            padding: 5px 10px;
            background-color: #e6f7ff;
            border: 1px solid #007bb5;
            border-radius: 5px;
            transition: background-color 0.3s, color 0.3s;
        }

        a:hover {
            background-color: #007bb5;
            color: #ffffff;
        }
    </style>
{% endblock %}

{% block body %}
    <div class="container">
        <h1>Calculated Balances</h1>

        <table class="table">
            <thead>
            <tr>
                <th>User</th>
                <th>Balance</th>
            </tr>
            </thead>
            <tbody>
            {% for userId, balance in balances %}
                <tr>
                    <td>{{ userId }}</td>
                    <td>{{ balance }} USD</td>
                </tr>
            {% endfor %}
            </tbody>
        </table>
    </div>
{% endblock %}
