{% extends 'base.html.twig' %}

{% block title %}Balances{% endblock %}

{% block body %}
    <div class="container">
        <h1>Calculated Balances</h1>

        <table class="table">
            <thead>
            <tr>
                <th>User</th>
                <th>Balance</th>
            </tr>
            </thead>
            <tbody>
            {% for userId, balance in balances %}
                <tr>
                    <td>User {{ userId }}</td>
                    <td>{{ balance }} USD</td>
                </tr>
            {% endfor %}
            </tbody>
        </table>
    </div>
{% endblock %}
