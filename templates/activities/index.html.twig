{% extends 'base.html.twig' %}

{% block title %}Activities index{% endblock %}

{% block stylesheets %}
    {{ parent() }}
    <link href="https://fonts.googleapis.com/css?family=Montserrat" rel="stylesheet">
    <style>
        /* Form general styles */
        body {
            background-color: #e6f7ff;
            font-family: Montserrat, sans-serif;
        }

        /* Header style */
        h1 {
            text-align: center;
            color: #007bb5;
            padding: 20px 0;
        }

        /* Table styles */
        .table {
            width: 90%;
            margin: 20px auto;
            border-collapse: collapse;
        }

        .table thead {
            background-color: #007bb5;
            color: #ffffff;
        }

        .table thead th {
            padding: 10px;
            border-bottom: 2px solid #e6f7ff;
        }

        .table tbody tr:nth-child(odd) {
            background-color: #f0faff;
        }

        .table tbody tr:nth-child(even) {
            background-color: #c9e6ff;
        }

        .table td {
            padding: 10px;
            text-align: center;
            color: #007bb5 !important;
        }

        /* Link styles */
        a {
            color: #007bb5;
            text-decoration: none;
            margin: 0 10px;
            padding: 5px 10px;
            background-color: #e6f7ff;
            border: 1px solid #007bb5;
            border-radius: 5px;
            transition: background-color 0.3s, color 0.3s;
        }

        a:hover {
            background-color: #007bb5;
            color: #ffffff !important;
        }

        .create-btn {
            display: block;
            width: max-content;
            margin: 10px auto;
            color: #007bb5 !important;
        }
    </style>
{% endblock %}

{% block body %}
    <h1>Activities index</h1>

    <table class="table">
        <thead>
        <tr>
            <th>Id</th>
            <th>Name</th>
            <th>Cost</th>
            <th>actions</th>
        </tr>
        </thead>
        <tbody>
        {% for activity in activities %}
            <tr>
                <td>{{ activity.id }}</td>
                <td>{{ activity.name }}</td>
                <td>{{ activity.cost }}</td>
                <td>
                    <a href="{{ path('app_activities_show', {'id': activity.id}) }}">Show</a>
                    <a href="{{ path('app_activities_edit', {'id': activity.id}) }}">Edit</a>
                </td>
            </tr>
        {% else %}
            <tr>
                <td colspan="4">no records found</td>
            </tr>
        {% endfor %}
        </tbody>
    </table>

    <a href="{{ path('app_activities_new') }}" class="create-btn">Create new</a>
    {{ include('users/bottom-right-menu.html.twig') }}
{% endblock %}
