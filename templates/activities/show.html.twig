{% extends 'base.html.twig' %}

{% block title %}Activities{% endblock %}

{% block stylesheets %}
    {{ parent() }}
    <style>
        /* General styles */
        body {
            background-color: #e6f7ff;
            font-family: Arial, sans-serif;
        }

        /* Header style */
        h1 {
            text-align: center;
            color: #007bb5;
            padding: 20px 0;
        }

        /* Table styles */
        .table {
            width: 90%;
            margin: 20px auto;
            border-collapse: collapse;
        }

        .table th {
            background-color: #007bb5;
            color: #ffffff;
            padding: 10px;
            border-bottom: 2px solid #e6f7ff;
        }

        .table td {
            padding: 10px;
            text-align: left;
            background-color: #f0faff;
        }

        .back-group {
            position: absolute;
            top: 0;
            left: 0;
            color: #007bb5;
            margin: 10px 10px;
            padding: 5px 10px;
            background-color: #e6f7ff;
            border: 1px solid #007bb5;
            border-radius: 5px;
            transition: background-color 0.3s, color 0.3s;

            font-family: 'Montserrat', sans-serif;
            text-decoration: none;
            color: #007bb5;
        }

        .back-group a {
            text-decoration: none;
            color: #007bb5;
            transition: color 0.3s;
        }

        .back-group:hover {
            background-color: #007bb5;
            color: #ffffff;
        }

        .back-group:hover a {
            color: #ffffff;
        }
{% endblock %}

{% block body %}
    <h1>Activities</h1>

    <table class="table">
        <tbody>
        <tr>
            <th>Id</th>
            <td>{{ activity.id }}</td>
        </tr>
        <tr>
            <th>Name</th>
            <td>{{ activity.name }}</td>
        </tr>
        <tr>
            <th>Cost</th>
            <td>{{ activity.cost }}</td>
        </tr>
        </tbody>
    </table>

    <div style="text-align: center;">
        <a href="{{ path('app_activities_index') }}">back to list</a>
        <a href="{{ path('app_activities_edit', {'id': activity.id}) }}">edit</a>
    </div>

    {{ include('activities/_delete_form.html.twig') }}
{% endblock %}
