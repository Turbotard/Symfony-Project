{% extends 'base.html.twig' %}

{% block title %}Users index{% endblock %}

{% block stylesheets %}
    <link href="https://fonts.googleapis.com/css?family=Montserrat" rel="stylesheet">
    <style>

        .sidenav{
            
        }



        /* Fond général */
        body {
            background-color: #e6f7ff;
            font-family: Montserrat, sans-serif !important;
        }

        /* En-tête */
        h1 {
            text-align: center;
            color: #007bb5;
            padding: 20px 0;
        }

        /* Tableau */
        .table {
            width: 90%;
            margin: 20px auto;
            border-collapse: collapse;
        }

        .table thead {
            background-color: #007bb5;
            color: #ffffff;
        }

        .table thead th {
            padding: 10px;
            border-bottom: 2px solid #e6f7ff;
        }

        .table tbody tr:nth-child(odd) {
            background-color: #f0faff;
        }

        .table tbody tr:nth-child(even) {
            background-color: #c9e6ff;
        }

        .table td {
            padding: 10px;
            text-align: center;
            color: black !important;
        }

        /* Liens */
        a {
            color: #007bb5 !important;
            text-decoration: none;
            margin: 0 10px;
            padding: 5px 10px;
            background-color: #e6f7ff;
            border: 1px solid #007bb5;
            border-radius: 5px;
            transition: background-color 0.3s, color 0.3s;
        }
        .logo{
            
        }

        a:hover {
            background-color: #007bb5;
            color: #ffffff !important;
        }

        /* Style spécifique pour le bouton "Create new" */
        .create-btn {
            display: block;
            width: max-content;
            margin: 10px auto;
        }

    </style>
{% endblock %}

{% block body %}
    <h1> Users index</h1>





    <table class="table">
        <thead>
        <tr>
            <th>First name</th>
            <th>Last name</th>
            <th>Birthday</th>
            <th>Email</th>
            <th>actions</th>
        </tr>
        </thead>
        <tbody>
        {% for user in users %}
            <tr>
                <!-- Affichage ID retiré -->
                <td>{{ user.firstname }}</td>
                <td>{{ user.lastname }}</td>
                <td>{{ user.birthday ? user.birthday|date('Y-m-d') : '' }}</td>
                <td>{{ user.email }}</td>
                <td>
                    <a href="{{ path('app_users_show', {'id': user.id}) }}">Show</a>
                    <a href="{{ path('app_users_edit', {'id': user.id}) }}">Edit</a>
                </td>
            </tr>
        {% else %}
            <tr>
                <td colspan="6">no records found</td>
            </tr>
        {% endfor %}
        </tbody>
    </table>

    <!-- Bouton "Create new" déplacé ici -->
    <a href="{{ path('app_users_new') }}" class="create-btn">Create new</a>

    {{ include('users/bottom-right-menu.html.twig') }}

{% endblock %}
