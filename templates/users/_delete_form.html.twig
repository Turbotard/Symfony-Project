<form method="post" action="{{ path('app_users_delete', {'id': user.id}) }}" onsubmit="return confirm('Are you sure you want to delete this item?');">
    <input type="hidden" name="_token" value="{{ csrf_token('delete' ~ user.id) }}">
    <button class="btn delete-btn">Delete</button></form>

<style>
    .btn.delete-btn {
        background-color: #e74c3c; /* Choix d'une couleur rouge pour indiquer une action de suppression */
        color: #ffffff;
        border: none;
        padding: 12px 25px;
        border-radius: 5px;
        cursor: pointer;
        transition: background-color 0.3s, transform 0.3s;
        box-shadow: 0px 2px 5px rgba(231, 76, 60, 0.2); /* Ombre rouge√¢tre pour s'harmoniser avec le fond du bouton */
    }

    .btn.delete-btn:hover {
        background-color: #c0392b;
        transform: translateY(-2px);
    }

    .btn.delete-btn:active {
        transform: translateY(0px);
    }
</style>
